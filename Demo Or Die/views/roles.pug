head
    title Log in
    link(href="stylesheets/css/style.css", rel="stylesheet")
body
    main
        div.bg-container
            div(class="bg bg-lefttop")
            div(class="bg bg-rightbottom")
        div.content-container
            .groups
                form(class='form groups__form', method='POST')
                    legend Select your role
                    .form__options
                        label.form__options--input
                            input(type='radio', name='role', value='Student')
                            | Student
                        label.form__options--input
                            input(type='radio', name='role', value='Teacher')
                            | Teacher
                        label(for='password', class='password', style='display:none;') Password
                            input(type='password', name='password', class='password', style='display:none;')
                    input.btn.groups__form--submit(type='submit', value='Save role')
            script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
            script(src='http://localhost:3000/javascript/script.js')
